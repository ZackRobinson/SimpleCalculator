<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10sp"
    tools:context="com.example.zack.calculator.MainActivity">


    <LinearLayout
        android:id="@+id/row0"
        android:layout_width="match_parent"
        android:layout_height="80sp"
        android:gravity="center">
        <TextView
            android:id="@+id/var1"
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight=".20"
            android:gravity="center"
            />
        <TextView
            android:id="@+id/operation"
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight=".20"
            android:gravity="center"
            />
        <TextView
            android:id="@+id/var2"
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight=".20"
            android:gravity="center"
            />
        <TextView
            android:id="@+id/equals"
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight=".20"
            android:text="="
            android:gravity="center_vertical"
            />
        <TextView
            android:id="@+id/result"
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight=".20"
            android:gravity="center"/>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/row1"
        android:layout_width="match_parent"
        android:layout_height="80sp"
        android:layout_below="@id/row0">


        <Button
            android:id="@+id/one"
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight=".25"
            android:text="1" />

        <Button
            android:id="@+id/two"
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight=".25"
            android:text="2" />

        <Button
            android:id="@+id/three"
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight=".25"
            android:text="3" />

        <Button
            android:id="@+id/plus"
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight=".25"
            android:text="+" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/row2"
        android:layout_width="match_parent"
        android:layout_height="80sp"
        android:layout_below="@id/row1">

        <Button
            android:id="@+id/four"
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight=".25"
            android:text="4" />

        <Button
            android:id="@+id/five"
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight=".25"
            android:text="5" />

        <Button
            android:id="@+id/six"
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight=".25"
            android:text="6" />

        <Button
            android:id="@+id/minus"
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight=".25"
            android:text="-" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/row3"
        android:layout_width="match_parent"
        android:layout_height="80sp"
        android:layout_below="@id/row2">

        <Button
            android:id="@+id/seven"
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight=".25"
            android:text="7" />

        <Button
            android:id="@+id/eight"
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight=".25"
            android:text="8" />

        <Button
            android:id="@+id/nine"
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight=".25"
            android:text="9" />

        <Button
            android:id="@+id/multiply"
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight=".25"
            android:text="x"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/row4"
        android:layout_width="match_parent"
        android:layout_height="80sp"
        android:layout_below="@id/row3">

        <Button
            android:id="@+id/clear"
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight=".25"
            android:text="CE"/>

        <Button
            android:id="@+id/zero"
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight=".25"
            android:text="0"/>

        <Button
            android:id="@+id/point"
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight=".25"
            android:text="."/>

        <Button
            android:id="@+id/divide"
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight=".25"
            android:text="รท"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/calcRow"
        android:layout_width="match_parent"
        android:layout_height="80sp"
        android:layout_below="@id/row4">

        <Button
            android:id="@+id/calc"
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="="/>

    </LinearLayout>



</RelativeLayout>
